<div id="<%= dom_id project %>" class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300 h-full flex flex-col">
  <figure class="h-48 overflow-hidden relative group">
    <%= project_image(project, css_class: "w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500") %>
    <% if project.featured? %>
      <div class="absolute top-2 right-2 badge badge-secondary shadow-md">Featured</div>
    <% end %>
  </figure>
  <div class="card-body p-6 flex-grow">
    <h2 class="card-title text-xl font-bold mb-2 text-gray-800">
      <%= project.name %>
    </h2>
    
    <% if project.intro.present? %>
      <p class="text-sm text-gray-500 mb-3 italic"><%= project.intro %></p>
    <% end %>
    
    <p class="text-gray-600 text-sm mb-4 flex-grow">
      <%= truncate(project.description, length: 120) %>
    </p>
    
    <div class="card-actions justify-end mt-auto pt-4 border-t border-gray-100 items-center">
      <% if project.git_link.present? %>
        <%= link_to format_url(project.git_link), target: "_blank", rel: "noopener", class: "btn btn-ghost btn-sm btn-circle tooltip tooltip-bottom", "data-tip" => "View on GitHub" do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
          </svg>
        <% end %>
      <% end %>
      
      <%= link_to "Details", project, class: "btn btn-primary btn-sm text-white" %>
    </div>
  </div>
</div>
