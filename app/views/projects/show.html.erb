<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
  <!-- Back Button -->
  <div class="bg-white border-b border-gray-200 sticky top-0 z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <%= link_to projects_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-red-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span class="font-medium"><%= t('projects.show.back_to_projects') %></span>
      <% end %>
    </div>
  </div>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <!-- Hero Section -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-8 sm:mb-12">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-0">
        <!-- Project Image -->
        <div class="lg:col-span-3 relative aspect-video lg:aspect-auto lg:min-h-[500px] bg-gray-100">
          <%= project_image(@project, css_class: "w-full h-full object-cover") %>
          <% if @project.featured? %>
            <div class="absolute top-4 right-4 bg-red-600 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg">
              <%= t('projects.show.featured_badge') %>
            </div>
          <% end %>
        </div>
        
        <!-- Project Details -->
        <div class="lg:col-span-2 p-6 sm:p-8 lg:p-10">
          <h1 class="text-3xl sm:text-4xl font-bold mb-4 text-gray-900"><%= @project.name %></h1>
          
          <!-- Chapter Badge -->
          <% if @project.chapter.present? %>
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-red-50 rounded-full text-red-700 mb-6">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="font-medium"><%= @project.chapter.name %></span>
            </div>
          <% end %>
          
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold mb-3 text-gray-900"><%= t('projects.show.about_project') %></h3>
              <div class="text-gray-600 leading-relaxed space-y-3">
                <% if @project.intro.present? %>
                  <p class="text-base"><%= @project.intro %></p>
                <% end %>
                <% if @project.description.present? %>
                  <%= simple_format @project.description, class: "text-sm" %>
                <% end %>
              </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 pt-6">
              <% if @project.preview_link.present? %>
                <%= link_to @project.preview_link, target: "_blank", rel: "noopener", class: "flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-xl transition-all shadow-lg hover:shadow-xl" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                  <%= t('projects.show.view_live') %>
                <% end %>
              <% end %>
              <% if @project.git_link.present? %>
                <%= link_to @project.git_link, target: "_blank", rel: "noopener", class: "flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-gray-300 hover:border-gray-400 hover:bg-gray-50 text-gray-700 font-semibold rounded-xl transition-all" do %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                  </svg>
                  <%= t('projects.show.github') %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Creators Section -->
    <% if @project.contributors.any? %>
      <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8 mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold mb-8 text-gray-900"><%= t('projects.show.project_creators') %></h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6">
          <% @project.contributors.each do |contributor| %>
            <div class="text-center group">
              <div class="w-full aspect-square bg-gradient-to-br from-red-100 to-red-50 rounded-2xl mb-3 flex items-center justify-center text-red-300 group-hover:from-red-200 group-hover:to-red-100 transition-all duration-300">
                <svg class="w-12 h-12 sm:w-16 sm:h-16" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                </svg>
              </div>
              <h3 class="font-bold text-sm sm:text-base mb-2 text-gray-900"><%= contributor.name %></h3>
              <% if contributor.github_username.present? %>
                <%= link_to "https://github.com/#{contributor.github_username}", target: "_blank", rel: "noopener", class: "inline-flex items-center gap-1 text-xs sm:text-sm text-gray-600 hover:text-red-600 transition-colors" do %>
                  <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 0C4.477 0 0 4.477 0 10c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.343-3.369-1.343-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.891 1.529 2.341 1.544 2.914 1.19.092-.926.349-1.544.635-1.9-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0110 4.817a9.56 9.56 0 012.504.337c1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C17.138 18.166 20 14.418 20 10c0-5.523-4.477-10-10-10z"/>
                  </svg>
                  <span><%= t('projects.show.github') %></span>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Share Section -->
    <div class="bg-gradient-to-r from-red-50 to-pink-50 rounded-2xl p-6 sm:p-8 mb-8 sm:mb-12">
      <div class="text-center">
        <h3 class="text-xl sm:text-2xl font-bold mb-2 text-gray-900"><%= t('projects.show.love_this_project') %></h3>
        <p class="text-gray-600 mb-6"><%= t('projects.show.share_message') %></p>
        <div class="flex gap-3 justify-center flex-wrap">
          <a href="https://wa.me/?text=<%= url_encode("Check out this project: #{@project.name} - #{project_url(@project)}") %>" target="_blank" rel="noopener" class="w-12 h-12 sm:w-14 sm:h-14 bg-teal-500 rounded-xl flex items-center justify-center text-white hover:bg-teal-600 hover:scale-110 transition-all shadow-lg" aria-label="<%= t('projects.share.whatsapp_label') %>">
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
          </a>
          <a href="https://www.facebook.com/sharer/sharer.php?u=<%= url_encode(project_url(@project)) %>" target="_blank" rel="noopener" class="w-12 h-12 sm:w-14 sm:h-14 bg-blue-600 rounded-xl flex items-center justify-center text-white hover:bg-blue-700 hover:scale-110 transition-all shadow-lg" aria-label="<%= t('projects.share.facebook_label') %>">
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href="https://twitter.com/intent/tweet?text=<%= url_encode("Check out this project: #{@project.name}") %>&url=<%= url_encode(project_url(@project)) %>" target="_blank" rel="noopener" class="w-12 h-12 sm:w-14 sm:h-14 bg-cyan-500 rounded-xl flex items-center justify-center text-white hover:bg-cyan-600 hover:scale-110 transition-all shadow-lg" aria-label="<%= t('projects.share.twitter_label') %>">
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
          </a>
          <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= url_encode(project_url(@project)) %>" target="_blank" rel="noopener" class="w-12 h-12 sm:w-14 sm:h-14 bg-blue-500 rounded-xl flex items-center justify-center text-white hover:bg-blue-600 hover:scale-110 transition-all shadow-lg" aria-label="<%= t('projects.share.linkedin_label') %>">
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>
    </div>

    <!-- More Projects Section -->
    <% if @related_projects.any? %>
      <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 sm:mb-8"><%= t('projects.show.more_from_chapter', chapter_name: @project.chapter.name) %></h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
          <% @related_projects.each do |project| %>
            <%= link_to project_path(project), class: "group block" do %>
              <div class="bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300">
                <div class="aspect-video bg-gray-200 overflow-hidden">
                  <%= project_image(project, css_class: "w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500") %>
                </div>
                <div class="p-4">
                  <h3 class="font-bold text-base sm:text-lg mb-2 group-hover:text-red-600 transition-colors line-clamp-1"><%= project.name %></h3>
                  <% if project.intro.present? %>
                    <p class="text-xs sm:text-sm text-gray-600 line-clamp-2"><%= project.intro %></p>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </main>

</div>
