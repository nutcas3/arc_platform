<% content_for :title, 'Learning Materials' %>

<div class="py-8">
  <h1 class="text-3xl font-bold mb-6">Learning Materials</h1>

  <div class="mb-6">
    <%= form_with url: learning_materials_path, method: :get, local: true, class: 'grid grid-cols-1 md:grid-cols-6 gap-4' do %>
      <div class="md:col-span-4">
        <%= text_field_tag :q, @q, placeholder: 'Search materials (e.g., Rails, Ruby, Active Record, Hotwire)', class: 'input input-bordered w-full', id: 'q' %>
      </div>
      <div>
        <%= select_tag :level, options_for_select([['All Levels',''], ['Beginner','beginner'], ['Intermediate','intermediate'], ['Expert','expert']], @level), class: 'select select-bordered w-full', id: 'level' %>
      </div>
      <div>
        <%= submit_tag 'Search', class: 'btn btn-primary w-full' %>
      </div>
    <% end %>
  </div>

  <% if @featured_materials.any? %>
    <section class="mb-10">
      <h2 class="text-2xl font-semibold mb-4">Featured</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @featured_materials.each do |m| %>
          <div class="card bg-base-100 shadow">
            <% if m.thumbnail_url.present? %>
              <figure class="h-40 overflow-hidden bg-gray-100"><img src="<%= m.thumbnail_url %>" alt="<%= m.title %> thumbnail" class="w-full object-cover"></figure>
            <% end %>
            <div class="card-body">
              <span class="badge badge-secondary capitalize w-fit"><%= m.level %></span>
              <h3 class="card-title text-lg"><%= m.title %></h3>
              <div class="card-actions justify-end">
                <%= link_to 'Open resource', m.link_url, class: 'btn btn-outline', target: '_blank', rel: 'noopener' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <section>
    <h2 class="text-2xl font-semibold mb-4">All Materials</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @materials.each do |m| %>
        <div class="card bg-base-100 shadow">
          <% if m.thumbnail_url.present? %>
            <figure class="h-40 overflow-hidden bg-gray-100"><img src="<%= m.thumbnail_url %>" alt="<%= m.title %> thumbnail" class="w-full object-cover"></figure>
          <% end %>
          <div class="card-body">
            <span class="badge badge-ghost capitalize w-fit"><%= m.level %></span>
            <h3 class="card-title text-lg"><%= m.title %></h3>
            <div class="card-actions justify-end">
              <%= link_to 'Open resource', m.link_url, class: 'btn btn-outline', target: '_blank', rel: 'noopener' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6">
      <%= paginate @materials if defined?(paginate) %>
    </div>
  </section>
</div>
