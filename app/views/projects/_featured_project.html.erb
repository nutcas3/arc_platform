<% if featured_project %>
  <section class="mb-16">
    <%= turbo_frame_tag "featured_project" do %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
        <div>
          <h2 class="text-3xl font-bold text-red-600 mb-2"><%= t('projects.featured.title') %></h2>
          <p class="text-sm text-gray-600 mb-6">
            <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-red-600 font-medium"><%= featured_project.chapter.name %></span>
          </p>

          <h3 class="text-2xl font-semibold mb-3"><%= featured_project.name %></h3>
          <% if featured_project.intro.present? %>
            <p class="text-gray-600 mb-6"><%= featured_project.intro %></p>
          <% end %>

          <div class="flex gap-4">
            <% if featured_project.preview_link.present? %>
              <%= link_to featured_project.preview_link, target: "_blank", rel: "noopener", class: "px-6 py-2 bg-red-600 text-white rounded-md font-medium hover:bg-red-700 transition" do %>
                <%= t('projects.featured.view_project') %>
              <% end %>
            <% end %>
            <% if featured_project.git_link.present? %>
              <%= link_to featured_project.git_link, target: "_blank", rel: "noopener", class: "px-6 py-2 border border-gray-300 rounded-md font-medium hover:bg-gray-50 transition inline-flex items-center gap-2" do %>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                </svg>
                <%= t('projects.show.github') %>
              <% end %>
            <% end %>
          </div>
        </div>

        <%= link_to project_path(featured_project), class: "block group", data: { turbo_frame: "_top" } do %>
          <div class="bg-gray-100 rounded-lg aspect-video flex items-center justify-center overflow-hidden cursor-pointer transition-all duration-300">
            <%= project_image(featured_project, css_class: "w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300") %>
          </div>
        <% end %>
      </div>

      <% if @total_featured && @total_featured > 1 %>
        <div class="flex justify-end items-center gap-4 mt-8">
          <div class="flex gap-2">
            <% @total_featured.times do |i| %>
              <button class="w-3 h-3 rounded-full <%= i == (@current_offset % @total_featured) ? 'bg-red-600' : 'bg-gray-300' %>"></button>
            <% end %>
          </div>
          <% current_position = @current_offset % @total_featured %>
          <% unless current_position == 0 %>
            <%= link_to t('projects.featured.prev'), projects_path(featured_offset: @current_offset - 1), class: "text-gray-800 font-medium hover:text-red-600" %>
          <% end %>
          <% unless current_position == @total_featured - 1 %>
            <%= link_to t('projects.featured.next'), projects_path(featured_offset: @current_offset + 1), class: "text-gray-800 font-medium hover:text-red-600" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </section>
<% end %>
