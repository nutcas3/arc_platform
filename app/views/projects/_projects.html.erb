<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
  <% projects.each do |project| %>
    <div class="group bg-white rounded-xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden">
      <%= link_to project_path(project), class: "block" do %>
        <div class="relative aspect-video overflow-hidden bg-gray-200">
          <%= project_image(project, css_class: "w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500") %>
          <% if project.featured? %>
            <div class="absolute top-3 right-3 bg-red-600 text-white px-3 py-1 rounded-full text-xs font-semibold shadow-lg">
              <%= t('projects.grid.featured') %>
            </div>
          <% end %>
        </div>
      <% end %>
      
      <div class="p-5 sm:p-6">
        <%= link_to project_path(project) do %>
          <h3 class="text-xl font-bold mb-2 group-hover:text-red-600 transition-colors line-clamp-1"><%= project.name %></h3>
        <% end %>
        
        <% if project.intro.present? %>
          <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= project.intro %></p>
        <% end %>
        
        <!-- Chapter Badge -->
        <% if project.chapter.present? %>
          <div class="inline-flex items-center gap-1 px-3 py-1 bg-gray-100 rounded-full text-xs text-gray-700 mb-4">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span><%= project.chapter.name %></span>
          </div>
        <% end %>
        
        <!-- Action Buttons -->
        <div class="flex gap-2 pt-4 border-t border-gray-100">
          <% if project.preview_link.present? %>
            <%= link_to project.preview_link, target: "_blank", rel: "noopener", class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors", onclick: "event.stopPropagation()" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              <%= t('projects.grid.preview') %>
            <% end %>
          <% end %>
          
          <% if project.git_link.present? %>
            <%= link_to project.git_link, target: "_blank", rel: "noopener", class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 border border-gray-300 hover:border-gray-400 hover:bg-gray-50 text-gray-700 text-sm font-medium rounded-lg transition-colors", onclick: "event.stopPropagation()" do %>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
              <%= t('projects.show.github') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if pagy.pages > 1 %>
  <div class="mt-8 flex justify-center">
    <%== pagy_nav(pagy) %>
  </div>
<% end %>
